  },
  "animation.fast": {
    "$type": "duration",
    "$value": "{duration.fast}",
    "$description": "Fast animation duration"
  },
  "animation.slow": {
    "$type": "duration",
    "$value": "{duration.slow}",
    "$description": "Slow animation duration"
  },
  "overlay.background": {
    "$type": "color",
