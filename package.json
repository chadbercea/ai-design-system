{
  "name": "ai-design-system",
  "version": "0.1.0",
  "private": true,
  "description": "Design token transformation pipeline - Figma → Style Dictionary → Framework Themes",
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "devDependencies": {
    "@tokens-studio/sd-transforms": "^2.0.0",
    "style-dictionary": "^5.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:tokens": "style-dictionary build --config config/style-dictionary.config.mjs && node scripts/generate-shadcn-fonts.js && node scripts/generate-shadcn-globals.js && node build/mui/validate-theme-mapping.js",
    "watch:tokens": "style-dictionary build --config config/style-dictionary.config.mjs --watch",
    "validate:theme": "node build/mui/validate-theme-mapping.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
