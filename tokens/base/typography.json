{
  "typography": {
    "family": {
      "base": {
        "$value": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif",
        "$type": "fontFamily",
        "$description": "Base font family for the application"
      },
      "mono": {
        "$value": "ui-monospace, SFMono-Regular, SF Mono, Menlo, Consolas, Liberation Mono, monospace",
        "$type": "fontFamily",
        "$description": "Monospace font family for code and technical content"
      }
    },
    "size": {
      "xs": {
        "$value": "0.75rem",
        "$type": "dimension",
        "$description": "Extra small text size"
      },
      "sm": {
        "$value": "0.875rem",
        "$type": "dimension",
        "$description": "Small text size"
      },
      "base": {
        "$value": "1rem",
        "$type": "dimension",
        "$description": "Base text size"
      },
      "lg": {
        "$value": "1.125rem",
        "$type": "dimension",
        "$description": "Large text size"
      },
      "xl": {
        "$value": "1.25rem",
        "$type": "dimension",
        "$description": "Extra large text size"
      },
      "2xl": {
        "$value": "1.5rem",
        "$type": "dimension",
        "$description": "2x large text size"
      },
      "3xl": {
        "$value": "1.875rem",
        "$type": "dimension",
        "$description": "3x large text size"
      },
      "4xl": {
        "$value": "2.25rem",
        "$type": "dimension",
        "$description": "4x large text size"
      }
    },
    "weight": {
      "normal": {
        "$value": "400",
        "$type": "number",
        "$description": "Normal font weight"
      },
      "medium": {
        "$value": "500",
        "$type": "number",
        "$description": "Medium font weight"
      },
      "semibold": {
        "$value": "600",
        "$type": "number",
        "$description": "Semibold font weight"
      },
      "bold": {
        "$value": "700",
        "$type": "number",
        "$description": "Bold font weight"
      }
    }
  }
} 